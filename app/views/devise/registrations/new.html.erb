<div class="small-container">
<h2>Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Nom %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :Prénom %>
    <%= f.text_field :fname %>
  </div>

  <div class="field">
    <%= f.label :Email %>
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Confirmation_MDP%>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Statut %>
    <%= f.collection_radio_buttons :role, [[true, 'senior'] ,[false, 'student']], :first, :last %>
  </div>

<p>Complétez votre compte dans votre profil</p>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
